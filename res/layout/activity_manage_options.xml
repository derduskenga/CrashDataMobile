<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ManageOptions"
	android:background="#4a4a4a">
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:padding="10dip"
	     >
	
	    <LinearLayout 
	        android:id="@+id/top_bar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/panel_shape"
	        android:layout_alignParentTop="true"
	        android:gravity="center"
	        android:padding="10dip">        
	        
	        <TextView     
	            android:text="Manage Options"        
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:layout_marginLeft="10dp"
	            android:layout_weight="1"
	            android:singleLine="true"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:textColor="#336699"
	            android:textStyle="bold"/>        
	       
	    </LinearLayout>
	    
	           <TextView android:id="@+id/txt_file_new"
			       android:layout_below="@id/top_bar"     
			       android:text="File New Accident"        
			       android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
			       android:gravity="center"
			       android:padding="10dip"
			       android:layout_marginLeft="15dip"
			       android:layout_marginRight="15dip"
			       android:layout_marginTop="30dip"
			       android:layout_marginBottom="30dip"
			       android:layout_weight="1"
			       android:singleLine="true"
			       android:textAppearance="?android:attr/textAppearanceLarge"
			       android:background="@layout/grey_gradient"
			       android:textColor="#FFF"
			       android:textStyle="bold"/>
	    
			   <TextView android:id="@+id/txt_emergency"
			       android:layout_below="@id/txt_file_new"     
			       android:text="Call Emergency"        
			       android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
			       android:gravity="center"
			       android:padding="10dip"
			       android:layout_marginLeft="15dip"
			       android:layout_marginRight="15dip"
			       android:layout_marginTop="30dip"
			       android:layout_marginBottom="30dip"
			       android:layout_weight="1"
			       android:singleLine="true"
			       android:textAppearance="?android:attr/textAppearanceLarge"
			       android:background="@layout/grey_gradient"
			       android:textColor="#FFF"
			       android:textStyle="bold"/>
			   
			   <TextView android:id="@+id/txt_help"	  
			       android:layout_below="@id/txt_emergency"     
			       android:text="Help"        
			       android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
			       android:gravity="center"
			       android:padding="10dip"
			       android:layout_marginLeft="15dip"
			       android:layout_marginRight="15dip"
			       android:layout_marginTop="30dip"
			       android:layout_marginBottom="30dip"
			       android:layout_weight="1"
			       android:singleLine="true"
			       android:textAppearance="?android:attr/textAppearanceLarge"
			       android:background="@layout/grey_gradient"
			       android:textColor="#FFF"
			       android:textStyle="bold"/>
	
	</RelativeLayout>
</ScrollView>